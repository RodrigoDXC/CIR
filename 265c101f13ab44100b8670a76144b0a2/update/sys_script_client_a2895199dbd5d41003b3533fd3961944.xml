        <description>Make Closed State read only for formal investigations.</description>
        <field>state</field>
        <global>true</global>
        <isolate_script>true</isolate_script>
        <messages/>
        <name>Remove State options</name>
        <order/>
        <script><![CDATA[function onChange(control, oldValue, newValue, isLoading, isTemplate) {
	//  ATTENTION: ServiceNow will bring up this script during certification, but isLoading IS INTENTIONALLY OMITTED.
	if(g_form.getValue('type') === 'basic') {
		return;
	}
	
	if(newValue != '118'){
		g_form.getOption('state', '118').disabled = true;
	}
	if(g_user.userID != g_form.getValue('assigned_to')){
		g_form.getOption('state', '119').disabled = true;
	}
}]]></script>
