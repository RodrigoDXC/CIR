        <name>Send Email to Active Group</name>
        <onclick>sendEmail()</onclick>
        <order>100</order>
        <script><![CDATA[function sendEmail(){
	var execId = g_form.getUniqueValue();

	var gaActiveTeam = new GlideAjax('x_fru_cir.CIRSituationUtilsClient');
	gaActiveTeam .addParam('sysparm_name', 'getActiveTeam');
	gaActiveTeam .addParam('sysparm_recId', execId);

	gaActiveTeam.getXML(createDialog);


	function createDialog(response){
		var answer = response.responseXML.documentElement.getAttribute("answer");
		var activeUsers = JSON.parse(answer);

		var dialogMessage = new GlideModal('x_fru_cir_send_email_active_group', false, 700, 450);
		dialogMessage.setTitle(getMessage('Send Email to Active Group'));
		dialogMessage.setPreference("recId", execId);
		dialogMessage.setPreference("activeUsers", activeUsers);

		dialogMessage.render();
	}

}
