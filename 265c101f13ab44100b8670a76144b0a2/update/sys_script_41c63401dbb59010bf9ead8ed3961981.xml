        <script><![CDATA[(function executeRule(current, previous /*null when async*/) {
	
	var recipients = current.recipients.split(",");
	var userEmail = '';
	
	for (var i = 0; i < recipients.length; i++){
		var users = new GlideRecord("sys_user");
		users.addEncodedQuery("email=" + recipients[i]);
		users.query();
		if(users.next()){
			userEmail +=  i == 0 ? users.sys_id : "," + users.sys_id;
		}
	}
	
	var log = new GlideRecord('x_fru_cir_notification_log');
	log.initialize();
	
	log.source_table = current.target_table + '';
	log.psi_id = current.instance;
	log.time = new GlideDateTime();
	log.users = userEmail;
	log.message = current.body;
	
	log.insert();

})(current, previous);]]></script>
