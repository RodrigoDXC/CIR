        <script><![CDATA[(function executeRule(current, previous /*null when async*/) {

	var isIntCatManager = gs.hasRole('x_fru_cir.psi_internal_manager, x_fru_cir.sec_admin');
    var isExtCatManager = gs.hasRole('x_fru_cir.psi_global_manager,x_fru_cir.sec_admin');

	// if the user has both internal and external manager roles or is fsm admin, no type will be automatically seted
    if (isExtCatManager && isIntCatManager) {
        return;
    }

    if (isExtCatManager) {
        current.type = '0'; // type = external
        current.update();
    }

    if (isIntCatManager) {
        current.type = '1'; // type = internal
        current.update();
    }

})(current, previous);]]></script>
