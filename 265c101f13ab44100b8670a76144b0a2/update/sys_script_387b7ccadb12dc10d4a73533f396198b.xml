        <script><![CDATA[(function executeRule(current, previous /*null when async*/) {

	var grExpenseTypes = new GlideRecord(CIRConstants.Tables.EXPENSE_TYPE);
	grExpenseTypes.addQuery('active', true);
	grExpenseTypes.query();
	
	while (grExpenseTypes.next()) {
		var grExpenseLines = new GlideRecord(CIRConstants.Tables.EXPENSE_LINE);
		grExpenseLines.initialize();
		grExpenseLines.setValue('type', grExpenseTypes.getUniqueValue());
		grExpenseLines.setValue('expense_id', current.getUniqueValue());
		grExpenseLines.insert();
	}

})(current, previous);]]></script>
