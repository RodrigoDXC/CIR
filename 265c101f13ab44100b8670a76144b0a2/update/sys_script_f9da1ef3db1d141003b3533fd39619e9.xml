        <script><![CDATA[(function executeRule(current, previous /*null when async*/) {

	// if it not a new record and the coordinator changes to an empty value, it will abort the action
	if (!current.isNewRecord() && previous.getValue('assigned_to') && !current.getValue('assigned_to')) {
		gs.addInfoMessage('You must have a coordinator assigned to this response plan');
		current.setAbortAction(true);
	}
	
	// if it is assigned a coordinator, the state is changed to in progress
	else if (!current.isNewRecord() && !previous.getValue('assigned_to') && current.getValue('assigned_to')) {
		current.setValue('state', '2'); // in progress state
	}

})(current, previous);]]></script>
