        <script><![CDATA[(function executeRule(current, previous /*null when async*/) {

	var users = [];

	var grTeam = new GlideRecord(CIRConstants.Tables.RESPONSE_TEAM);
	grTeam.addQuery("response_execution_id", current.response_execution_id);
	grTeam.query();

	while(grTeam.next()){
		users.push(grTeam.user.toString());                 
	}

	var numbers = new CIRSituationUtils().GetPhoneNumbers(users.join(","));
	var fromNumber = gs.getProperty('x_fru_cir.twilio.phone.number').toString();
	var notify = new sn_notify.NotifyScoped();

	for (var i = 0; i < numbers.length; i++) {
		notify.call(fromNumber, numbers[i].toString(), null, null, null, current);
	}

})(current, previous);]]></script>
