        <script><![CDATA[(function executeRule(current, previous /*null when async*/ ) {
    var gr = new GlideRecord(CIRConstants.Tables.ASSESSMENT_FIELD);
    if (gr.get(current.assessment_field)) {
        if ((current.operation() === "delete" && current.getValue('default') === 'true') || (current.getValue('default') === 'false' && previous.getValue('default') === 'true')) {
            gr.setValue('default_value', '');
            gr.update();
        } else if (current.getDisplayValue('default') === 'true') {
            gr.setValue('default_value', current.value);
            gr.update();
        }
    }
})(current, previous);]]></script>
