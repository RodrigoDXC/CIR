        <script><![CDATA[(function executeRule(current, previous /*null when async*/) {

	var utils = new CIRPersonalProtectionUtils();
	
	var workedHours = utils.GetWorkedHours(current.start_time.toString(), current.end_time.toString());
	var reportWorkedHours = utils.GetFormatedWorkedHours(workedHours);
	
	current.setValue('hours_worked', workedHours.getValue());
	current.setValue('report_worked_hours', reportWorkedHours);
	
	// update worked hours on the bg record
	if (previous.state + '' === '0' && current.state + '' === '2') {
		utils.UpdateBgWorkedHours(current.bodyguard.toString(), workedHours);
	}

})(current, previous);]]></script>
