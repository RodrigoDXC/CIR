        <script><![CDATA[(function executeRule(current, previous /*null when async*/) {

	// Check whether combination of Month, Year, Location and Working Hours exist in the table by record update
	var gr = new GlideRecord('x_fru_cir_kpi_working_hours');
	gr.addQuery('month', current.month);
	gr.addQuery('year', current.year);
	gr.addQuery('location', current.location);
	gr.query();

	if (gr.hasNext() && gr.sys_id != current.sys_id){
		gs.addErrorMessage('Working hours for ' + current.month.getDisplayValue() + ' ' + current.year + ' for location: ' + current.location.name + ' already exists.');
		current.setAbortAction(true);	
	}
})(current, previous);]]></script>
