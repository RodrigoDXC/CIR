		var country = '';
		var gr = new GlideRecord('sys_user');
		if (gr.get(gs.getUserID())) {

			// if location is not empty, it will get the value of location's country
			var loc = gr.location.getRefRecord();
			country = loc.getDisplayValue('country') || gr.getDisplayValue('country');
		}
		if (country) {
			current.country = country;
		}
	}

