        <client_script><![CDATA[function onCancel() {
    var c = gel('cancelled');
    c.value = "true";
    GlideDialogWindow.get().destroy();
    return false;
}

function validateForm() {
	
    if (gel('shortD').value == '') {
        alert("${JS:gs.getMessage('Please insert Short Description')}");
        return false;
    } else if (gel('desc').value == '') {
        alert("${JS:gs.getMessage('Please insert Description')}");
        return false;
    } else if (gel('priority').value == '') {
        alert("${JS:gs.getMessage('Please insert Priority')}");
        return false;
    } else if (gel('due_date').value == '') {
        alert("${JS:gs.getMessage('Please insert Due Date')}");
        return false;
    }
}]]></client_script>
