        <name>Show Related Lists base on Role</name>
        <order/>
        <script><![CDATA[function onLoad() {
	var ga = new GlideAjax('CIRCaseManagementAjax');
	ga.addParam('sysparm_name', 'getRoleAllowedRelatedLists');
	ga.getXML(function (response) {
		var answer = response.responseXML.documentElement.getAttribute("answer");
		if(answer) {
			var array = JSON.parse(answer);
			if(array.length === 0) {
				return;
			}
			g_form.hideRelatedLists();
			for(var i in array) {
				g_form.showRelatedList(array[i]);
			}
		}
	});
}]]></script>
