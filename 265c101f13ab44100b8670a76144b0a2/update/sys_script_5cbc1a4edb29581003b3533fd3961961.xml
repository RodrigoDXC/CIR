        <script><![CDATA[(function executeRule(current, previous /*null when async*/) {

	var grET = new GlideRecord(CIRConstants.Tables.TASK_TEMPLATE);
    grET.addEncodedQuery('category.sys_id=' + current.category + '^dimension.sys_id=' + current.dimension);
    grET.query();
	
    if (!grET.hasNext()) {
        gs.addInfoMessage(gs.getMessage('cir_no_task_template'));
    } else {
        while (grET.next()) {
            var nGRET = new GlideRecord(CIRConstants.Tables.SIT_TSK_TEMP_PARAM_M2M);
			nGRET.initialize();
            nGRET.setValue('situation_task_template', grET.sys_id);
            nGRET.setValue('situation_parametrization', current.sys_id);
            nGRET.insert();
        }
    }

})(current, previous);]]></script>
