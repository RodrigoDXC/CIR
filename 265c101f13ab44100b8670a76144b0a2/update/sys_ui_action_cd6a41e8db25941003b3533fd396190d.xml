        <name>Add Escalation Teams</name>
        <onclick/>
        <order>100</order>
        <script><![CDATA[if (parent) {
	var fieldsToCopy = ['country', 'level_name', 'order', 'dimension', 'contact_list', 'message_set'];
	var grET = new GlideRecord(CIRConstants.Tables.SITUATION_ESCALATION_LEVEL);
	grET.addQuery('country', parent.country + '');
	grET.addQuery('dimension', parent.dimension + '');
	grET.addQuery('default', true);
	grET.query();
	
	if (!grET.hasNext()) {
		gs.addInfoMessage(gs.getMessage('cir_no_escalation_team'));
	} else {
		while (grET.next()) {
			var nGRET = new GlideRecord(CIRConstants.Tables.SITUATION_ESCALATION_LEVEL);
			nGRET.initialize();
			fieldsToCopy.forEach(function (x) {
				nGRET[x] = grET[x];
			});
			nGRET.setValue('default', false);
			nGRET.setValue('parametrization', parent.sys_id + '');
			nGRET.insert();
		}
	}
}]]></script>
