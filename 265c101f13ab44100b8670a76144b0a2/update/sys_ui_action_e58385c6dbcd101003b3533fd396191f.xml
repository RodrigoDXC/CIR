        <script><![CDATA[function beginInvestigation() {
    if(g_form.getTableName() == 'x_fru_cir_incident' && g_scratchpad.cir_has_impact == false) {
        alert(new GwtMessage().getMessage('cir_case_management_need_impact_record'));
        return false;
    }
    g_form.setValue('state', g_scratchpad.cir_under_investigation_state);
    gsftSubmit(null, g_form.getFormElement(), 'cir_begin_investigation');
}

if(typeof window == 'undefined') {
    serverSignOff();
}

function serverSignOff() {
    current.state = CIRCaseRiskImpGenericUtilsFP().GetStateValue('under_investigation');
    current.update();

    var grInvestigation = new GlideRecord(CIRConstants.Tables.INVESTIGATION);
    grInvestigation.initialize();
    grInvestigation.setValue('cir_case', current.sys_id.toString());
    var type = 'basic';
    if(current.sys_class_name == CIRConstants.Tables.INCIDENT && current.severity <= 2) {
        type = 'formal';
    }
    grInvestigation.type = type;
    grInvestigation.insert();
    action.setRedirectURL(grInvestigation);
}]]></script>
