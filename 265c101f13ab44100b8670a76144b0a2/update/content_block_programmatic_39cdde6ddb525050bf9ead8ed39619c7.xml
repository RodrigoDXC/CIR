        <programmatic_content><![CDATA[<?xml version="1.0" encoding="utf-8" ?>
<j:jelly trim="false" xmlns:j="jelly:core" xmlns:g="glide" xmlns:j2="null" xmlns:g2="null">

	<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.1.1/js/bootstrap.min.js"></script>
	
	<style>
		.time-field {
            display: initial;
            width: auto;
            line-height: initial !important;
        }
	</style>
	
	<div style="margin-left: 9px">
		<h4>${gs.getMessage('cir_select_date_report_filter')}</h4>
		<input type="date" id="start_date" class="form-control time-field" onChange="filterByDate();" />
	</div>
	
	<script type="text/javascript">
		$j(".date-picker").datepicker({
			dateFormat: 'dd/mm/yy'
		});
		var today = $j.datepicker.formatDate('yy-mm-dd', new Date());
		$j("#start_date").val(today);
	</script>
	
	<script>
		$j(document).ready(function(){ 
			filterByDate();
		});
		
		function filterByDate() {
			var dahsHandler = new DashboardMessageHandler('report_date_report_filter');
			var formatedDate = $j("#start_date").val();
			var serviceOrderQuery = "";
		
			if (formatedDate) {		
		 		serviceOrderQuery = "static_service.dateON"+ formatedDate +"@javascript:gs.dateGenerate(\'"+formatedDate+"\',\'start\')@javascript:gs.dateGenerate(\'"+formatedDate+"\',\'end\')";
				var vendorReportQuery = "vendor_report.report_dateON"+ formatedDate +"@javascript:gs.dateGenerate(\'"+formatedDate+"\',\'start\')@javascript:gs.dateGenerate(\'"+formatedDate+"\',\'end\')";
		
				var filter1 = dahsHandler.getFilterMessage("x_fru_cir_static_service_order", serviceOrderQuery);
				var filter2 = dahsHandler.getFilterMessage("x_fru_cir_vendor_report_details", vendorReportQuery);
				var finalFilter = [filter1, filter2];
		
				SNC.canvas.interactiveFilters.setDefaultValue({
					id: dahsHandler.report_date_report_filter,
					filters: finalFilter,
					}, false);
				dahsHandler.publishMessage(finalFilter);
			}
		
			if (!formatedDate) {
				serviceOrderQuery = "exception_control=true^ORDERBYstatic_service.date";
				dahsHandler.publishFilter("x_fru_cir_static_service_order", serviceOrderQuery);
			}
		};
	</script>
	<body>
	</body>	
</j:jelly>]]></programmatic_content>
