        <script><![CDATA[(function executeRule(current, previous /*null when async*/) {

	var grET = new GlideRecord(CIRConstants.Tables.SITUATION_ESCALATION_LEVEL);
	grET.addQuery('order', current.getValue('order'));
	grET.addQuery('country', current.getValue('country'));
	grET.addQuery('dimension', current.getValue('dimension'));
	grET.addQuery('sys_id', '!=', current.getValue('sys_id'));
	grET.addQuery('default', current.getValue('default'));

	// it also checks if there is already a escalation team with the same order for the same parametrization
	if (current.getValue('default') == '0') {
		grET.addQuery('parametrization', current.getValue('parametrization'));
	}
	grET.query();
	if (grET.hasNext()) {
		gs.addErrorMessage(gs.getMessage('cir_escalation_team_already_exist'));
		current.setAbortAction(true);
	}

})(current, previous);]]></script>
