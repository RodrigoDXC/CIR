        <script><![CDATA[(function executeRule(current, previous /*null when async*/) {

	if(current.operation() == 'insert'){
		var cirCase = current.getElement('cir_case').getRefRecord();
		var recipients = cirCase.assigned_to.toString();
		var investigation = new GlideRecord(CIRConstants.Tables.INVESTIGATION);
		investigation.addQuery('cir_case', cirCase.toString());
		investigation.query();
		if(investigation.next()){
			if(investigation.assigned_to.toString() != ''){
				recipients += ',' + investigation.assigned_to.toString();
			}
		}
		gs.eventQueue('x_fru_cir.witness.added', current, recipients, '');
	}

})(current, previous);]]></script>
