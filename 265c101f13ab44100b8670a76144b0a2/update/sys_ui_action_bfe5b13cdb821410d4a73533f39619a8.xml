        <name>Publish Assessment</name>
        <onclick/>
        <order>300</order>
        <script><![CDATA[try {
	var checkScript = new CIRAssmtModel().CheckGlobalScript();
	
	if(checkScript.isOk) {	
		var allCatalogObjectsCreated = new CIRAssmtModel().CheckCatalogObject(current.sys_id);
		var allChoiceCreated = new CIRAssmtModel().CheckChoices(current.sys_id);
		var assessmentPublished = allCatalogObjectsCreated;
		if(allCatalogObjectsCreated) {
			assessmentPublished = new CIRAssmtModel().PublishAssessmentDefinition(current.sys_id);
		}
		if (!assessmentPublished) {
			gs.addErrorMessage(gs.getMessage('cir_assmt_not_published'));
		}
		else if(!allChoiceCreated){
			gs.addErrorMessage(gs.getMessage('cir_assmt_choice_not_created'));
		}
		else if(assessmentPublished) {
			gs.addInfoMessage(gs.getMessage('cir_assmt_successfully_published'));
		}
	} else {
		var msg = checkScript.msg;
		gs.addErrorMessage(msg);
	}
} catch(error) {
	gs.addErrorMessage(error);
}
action.setRedirectURL(current);]]></script>
