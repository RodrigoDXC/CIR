        <name>Add link to body</name>
        <onclick>addLinkTagWindow()</onclick>
        <order>100</order>
        <script><![CDATA[function addLinkTagWindow() {
	g_form.clearMessages();
	var tag = '#{record_link}'; // defines the tag to be added to the message
	var type = g_form.getValue('type'); // gets the type of the message
	
	if (g_form.getValue('category') == 0 && (type == 'email' || type == 'sms')) {
		var field = type == 'email'? 'body' : 'plain_text';
		var message = g_form.getValue(field) + ' ' + tag;
		g_form.setValue(field, message);
		checkBodyMessage(field, tag);
	} else {
		g_form.addErrorMessage(getMessage('cir_sit_record_link_error'));
	}
}

// double check if the record link has been added to the message field
function checkBodyMessage(field, tag) {
	if (g_form.getValue(field).indexOf(tag) !== -1) {
		g_form.addInfoMessage(getMessage('cir_sit_record_link_added'));
	}
}]]></script>
